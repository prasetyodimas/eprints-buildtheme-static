# editorconfig.org

root = true

[*.html]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true


# Indentation override for all JS under lib directory
[*.js]
indent_style = space
indent_size = 2

[*.{css,sass,scss}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
